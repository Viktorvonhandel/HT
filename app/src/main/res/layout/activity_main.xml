<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Kotinäkymä (home) -->
    <RelativeLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <!-- Hakukenttä ja hakupainike -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hae kunta nimellä" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hae"
            android:textColor="@color/secondary"
            android:layout_below="@id/searchEditText"
            android:layout_marginTop="8dp"/>

        <!-- Viimeaikaisten hakujen lista -->
        <TextView
            android:id="@+id/recentSearchesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viimeaikaiset haut"
            android:layout_below="@id/searchButton"
            android:layout_marginTop="16dp"/>

        <ListView
            android:id="@+id/recentSearchesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentSearchesTextView"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary"/>

    </RelativeLayout>

    <!-- Muut näkymät tässä -->

</RelativeLayout>

